<header>
    <div aria-live="polite" aria-atomic="true" class="position-relative">
        <div id="toast-container" class="toast-container top-0 end-0 p-3"></div>
    </div>

    <nav class="navbar bg-black text-white" style="margin-top:5px">
        <div class="container-fluid">
            <a href="/admin" class="navbar-brand">Homepage</a>

            <div class="left-cont">
                <form class="d-flex" style="width:100%" id="searchForm">
                    <input class="form-control me-2" type="text" id="query" placeholder="Search" aria-label="Search"
                        style="width:100%">
                    <button class="btn btn-outline-success" id="searchBtn"
                        onclick="event.preventDefault(); loadPage(1, '{{uid}}');">Search</button>
                </form>
                <a class="header-user" href="/admin/statistic">
                    <i class="fa-solid fa-chart-simple"></i>
                    <span class="header-user-name"> Statistic </span>
                </a>
                <div class="header-user">
                    <img src="/imgs/male_avatar.png" alt="avatar" class="header-user-img" />
                    <span class="header-user-name"> {{user.username}} </span>
                    <ul class="header-user-menu">
                        <li class="header-user-item">
                            <a href="/admin/profile">My Account</a>
                        </li>
                        <li class="header-user-item header-user-item--separate">
                            <a href="/auth/logout">Log Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>